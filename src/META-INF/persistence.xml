  <!-- Unidade de persistencia -->
  <persistence-unit name="mwPU" transaction-type="RESOURCE_LOCAL">
    <!-- Implementação do JPA -->
    <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
    <!-- Lista de entidades -->
    <!--fiscal-->
    <class>model.bean.fiscal.Cfop</class>
    <class>model.bean.fiscal.Ibpt</class>
    <class>model.bean.fiscal.Icms</class>
    <class>model.bean.fiscal.MeioDePagamento</class>
    <class>model.bean.fiscal.Ncm</class>
    <class>model.bean.fiscal.ProdutoOrigem</class>
    <class>model.bean.fiscal.SatErroOuAlerta</class>
    <class>model.bean.fiscal.SatEstado</class>
    <class>model.bean.fiscal.UnidadeComercial</class>
    <!--principal-->
    <class>model.bean.principal.Caixa</class>
    <class>model.bean.principal.CaixaItem</class>
    <class>model.bean.principal.CaixaItemTipo</class>
    <class>model.bean.principal.CaixaPeriodo</class>
    <class>model.bean.principal.Categoria</class>
    <class>model.bean.principal.Constante</class>
    <class>model.bean.principal.ContaPagarProgramada</class>
    <class>model.bean.principal.Diretiva</class>
    <class>model.bean.principal.MovimentoFisico</class>
    <class>model.bean.principal.MovimentoFisicoTipo</class>
    <class>model.bean.principal.Parcela</class>
    <class>model.bean.principal.Pessoa</class>
    <class>model.bean.principal.Produto</class>
    <class>model.bean.principal.ProdutoComponente</class>
    <class>model.bean.principal.Recurso</class>
    <class>model.bean.principal.Usuario</class>
    <class>model.bean.principal.Venda</class>
    <class>model.bean.principal.VendaTipo</class>
    <exclude-unlisted-classes>true</exclude-unlisted-classes>
    <properties>
      <!-- configurado em Connectionfactory -->
      <!-- Propriedades JDBC -->
      <!--
            <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost/ouroboros"/>
            <property name="javax.persistence.jdbc.user" value="root"/>
            <property name="javax.persistence.jdbc.password" value=""/>
            -->
      <!-- Configurações específicas do Hibernate -->
      <!--
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5InnoDBDialect"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.show_sql" value="false"/>
            <property name="hibernate.format_sql" value="true"/>
            -->
      <!-- Important -->
      <!--
            <property name="hibernate.connection.provider_class" value="org.hibernate.connection.C3P0ConnectionProvider"/>
            -->
      <!-- Configuring Connection Pool -->
      <!--
            <property name="hibernate.c3p0.min_size" value="5"/>
            <property name="hibernate.c3p0.max_size" value="100"/>
            <property name="hibernate.c3p0.acquire_increment" value="1"/>
            <property name="hibernate.c3p0.timeout" value="5"/>
            <property name="hibernate.c3p0.max_statements" value="0"/>
            <property name="hibernate.c3p0.idle_test_period" value="10"/>
            -->
    </properties>
  </persistence-unit>
  <persistence-unit name="bootstrapPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
    <class>model.bootstrap.bean.IbptBs</class>
    <class>model.bootstrap.bean.NcmBs</class>
    <class>model.bootstrap.bean.SatErroOuAlertaBs</class>
    <class>model.bootstrap.bean.SatEstadoBs</class>
    <class>model.bootstrap.bean.UnidadeComercialBs</class>
    <class>model.bean.endereco.Endereco</class>
    <class>model.bean.endereco.Cidade</class>
    <class>model.bean.endereco.Bairro</class>
    <class>model.bean.endereco.Estado</class>
    <properties>
      <property name="javax.persistence.jdbc.driver" value="org.sqlite.JDBC"/>
      <property name="javax.persistence.jdbc.url" value="jdbc:sqlite:bootstrap.sqlite"/>
      <!-- Configurações específicas do Hibernate -->
      <property name="hibernate.dialect" value="org.hibernate.dialect.SQLiteDialect"/>
      <property name="hibernate.show_sql" value="false"/>
      <property name="hibernate.format_sql" value="true"/>
    </properties>
  </persistence-unit>
</persistence>
